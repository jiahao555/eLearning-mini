.content{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  border-bottom: 10px solid #ddd;
}

.content-item{
  width: 45%;
  height: 250rpx;
  background-color:skyblue;
  margin: 5rpx;
  border-radius: 15rpx;
  position: relative;
}
.content-item-text{
  position: absolute;
  bottom: 100rpx;
  left: 80rpx;
  color: white;
  font-size: 50rpx;
}
