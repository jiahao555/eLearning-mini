<view class='publish'>
  <input bindinput='titleInput' placeholder='(请输入标题)' class='title'></input>
  <view class='textIput'>
    <textarea class='input' bindinput='textInput'  maxlength='500' placeholder='向老师同学问问你学习上的问题吧' auto-focus auto-height></textarea>
  </view>
  <view class='picSend'>
    <image src='../../../images/pic.png' class='pic' bindtap='doUpload'></image>
    <view class='pulishBtn' bindtap='pulish'> 发布</view>
  </view>
  <view class='flexCenter w100' wx:if='{{imgUrl}}'>
    <image src='{{imgUrl}}' mode="aspectFit" ></image>
  </view>
</view>
